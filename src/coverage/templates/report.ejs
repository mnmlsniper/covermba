<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Coverage Report</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .header {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }
        .summary {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        .stat {
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
        }
        .endpoints {
            margin-top: 30px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        .method {
            font-weight: bold;
            padding: 4px 8px;
            border-radius: 4px;
        }
        .GET { background-color: #e3f2fd; color: #0d47a1; }
        .POST { background-color: #e8f5e9; color: #1b5e20; }
        .PUT { background-color: #fff3e0; color: #e65100; }
        .DELETE { background-color: #ffebee; color: #b71c1c; }
        .covered { color: #28a745; }
        .not-covered { color: #dc3545; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>API Coverage Report</h1>
            <p>Generated on <%= timestamp %></p>
        </div>

        <div class="summary">
            <h2>Summary</h2>
            <p>
                <span class="stat"><%= coverage.coveragePercentage.toFixed(2) %>%</span> coverage<br>
                <span class="stat"><%= coverage.coveredEndpoints %></span> of <%= coverage.totalEndpoints %> endpoints covered
            </p>
        </div>

        <div class="endpoints">
            <h2>Endpoints</h2>
            <table>
                <thead>
                    <tr>
                        <th>Method</th>
                        <th>Path</th>
                        <th>Summary</th>
                        <th>Status</th>
                        <th>Requests</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const [key, endpoint] of Object.entries(endpoints)) { %>
                        <tr>
                            <td><span class="method <%= endpoint.method %>"><%= endpoint.method %></span></td>
                            <td><%= endpoint.path %></td>
                            <td><%= endpoint.summary %></td>
                            <td class="<%= endpoint.requests.length > 0 ? 'covered' : 'not-covered' %>">
                                <%= endpoint.requests.length > 0 ? '✓ Covered' : '✗ Not Covered' %>
                            </td>
                            <td><%= endpoint.requests.length %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html> 