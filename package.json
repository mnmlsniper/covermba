{
  "name": "covermba",
  "version": "0.0.1",
  "description": "Library for tracking API test coverage based on Swagger/OpenAPI specification",
  "main": "src/coverage/ApiCoverage.js",
  "type": "module",
  "scripts": {
    "test": "playwright test tests/api-coverage.test.js",
    "test:unit": "ava src/__tests__/**/*.test.js",
    "test:all": "npm run test && npm run test:unit"
  },
  "keywords": [
    "api",
    "coverage",
    "swagger",
    "openapi",
    "testing",
    "playwright"
  ],
  "author": "mnmlsniper",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.9",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "ava": "^6.1.0"
  },
  "files": [
    "src/coverage/ApiCoverage.js",
    "src/coverage/TestReporter.js",
    "src/coverage/config.js",
    "src/coverage/templates/report.ejs"
  ]
}
